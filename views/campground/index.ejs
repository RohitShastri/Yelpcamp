<% include ../partials/header%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>Best Campground sites in India</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-4 col-sm-6" >
                <div class="card text-center card card-body flex-fill my-3">
                    <img class="card-img-top" src="<%= campground.image%>">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name%></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>    
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer%>
