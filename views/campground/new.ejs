<% include ../partials/header %>
<div class="container text-center">
    <h1>Create a New Campground</h1>
        <div class="mx-auto my-3" style="width: 30%">
            <form action="/campgrounds" method="POST">
                <input class="form-control form-group" type="text" name="name" placeholder="name">
                <input class="form-control form-group" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                <input class="form-control form-group" type="text" name="image" placeholder="image-url">
                <input class="form-control form-group" type="text" name="description" placeholder="Description">
                <button class="btn btn-lg btn-block btn-primary form-group">Submit!</button>
            </form>
        </div>
    <a href="/campgrounds">Go Back</a>
    
</div>
